---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - Avraham Rahimov" description="Get in touch with Avraham Rahimov - Data Scientist">
  <section class="py-20">
    <div class="container mx-auto px-6 max-w-4xl">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-bold text-primary glow-text mb-4">Let's Connect</h1>
        <div class="w-24 h-1 bg-gradient-to-r from-primary to-accent mx-auto mb-8"></div>
        <p class="text-light/70 text-lg max-w-2xl mx-auto">
          I'm always excited to discuss new opportunities, collaborate on interesting projects, 
          or simply chat about the latest developments in AI and data science.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-dark/50 backdrop-blur-lg border border-primary/20 rounded-3xl p-10 hover-glow">
          <h2 class="text-3xl font-bold text-light mb-8 flex items-center">
            <span class="text-accent text-4xl mr-4">üìß</span>
            Send Me a Message
          </h2>
          
          <form method="POST" action="https://formspree.io/f/rahimovavi3@gmail.com" class="space-y-6" id="contact-form">
            <div>
              <label for="name" class="block text-light font-semibold mb-2">Your Name</label>
              <input 
                type="text" 
                id="name"
                name="name" 
                placeholder="Enter your full name" 
                required 
                class="w-full p-4 rounded-xl bg-dark/50 border border-primary/30 text-light placeholder-light/50 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 transition-all duration-300"
              />
            </div>
            
            <div>
              <label for="email" class="block text-light font-semibold mb-2">Your Email</label>
              <input 
                type="email" 
                id="email"
                name="email" 
                placeholder="your.email@example.com" 
                required 
                class="w-full p-4 rounded-xl bg-dark/50 border border-primary/30 text-light placeholder-light/50 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 transition-all duration-300"
              />
            </div>
            
            <div>
              <label for="subject" class="block text-light font-semibold mb-2">Subject</label>
              <input 
                type="text" 
                id="subject"
                name="subject" 
                placeholder="What's this about?" 
                class="w-full p-4 rounded-xl bg-dark/50 border border-primary/30 text-light placeholder-light/50 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 transition-all duration-300"
              />
            </div>
            
            <div>
              <label for="message" class="block text-light font-semibold mb-2">Message</label>
              <textarea 
                id="message"
                name="message" 
                placeholder="Tell me about your project, question, or just say hello!" 
                required 
                rows="6"
                class="w-full p-4 rounded-xl bg-dark/50 border border-primary/30 text-light placeholder-light/50 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 transition-all duration-300 resize-none"
              ></textarea>
            </div>
            
            <button 
              type="submit" 
              class="w-full bg-gradient-to-r from-primary to-accent text-dark px-8 py-4 rounded-xl font-semibold text-lg hover-glow transition-all duration-300 transform hover:scale-105 flex items-center justify-center space-x-2"
              id="submit-btn"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
              </svg>
              <span>Send Message</span>
            </button>
          </form>
          
          <!-- Success/Error Messages -->
          <div id="form-status" class="mt-6 hidden"></div>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          <!-- Direct Contact -->
          <div class="bg-dark/50 backdrop-blur-lg border border-primary/20 rounded-3xl p-10 hover-glow">
            <h2 class="text-3xl font-bold text-light mb-8 flex items-center">
              <span class="text-accent text-4xl mr-4">üì±</span>
              Get In Touch
            </h2>
            
            <div class="space-y-6">
              <div class="flex items-center space-x-4 p-4 bg-primary/10 border border-primary/30 rounded-xl hover:bg-primary/20 transition-colors">
                <svg class="w-6 h-6 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <div>
                  <p class="text-light font-semibold">Email</p>
                  <a href="mailto:rahimovavi3@gmail.com" class="text-primary hover:text-accent transition-colors">
                    rahimovavi3@gmail.com
                  </a>
                </div>
              </div>
              
              <div class="flex items-center space-x-4 p-4 bg-accent/10 border border-accent/30 rounded-xl hover:bg-accent/20 transition-colors">
                <svg class="w-6 h-6 text-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div>
                  <p class="text-light font-semibold">Location</p>
                  <p class="text-light/70">Ramla, Israel</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Social Links -->
